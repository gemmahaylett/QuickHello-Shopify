$dark_grey: #666666;
$blue: #75bcb5;
$pink: #e5729c;
$bebas: 'bebas_neueregular';
$museo: 'museo_sans500';

$fontAwesomePath:   "../font" !default;

/* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ fonts */

@font-face {
    font-family: 'bebas_neueregular';
    src: url('./BebasNeue-webfont.eot');
    src: url('./BebasNeue-webfont.eot?#iefix') format('embedded-opentype');
    src: url('./BebasNeue-webfont.woff') format('woff');
    src: url('./BebasNeue-webfont.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'museo_sans500';
    src: url('./MuseoSans_500-webfont.eot');
    src: url('./MuseoSans_500-webfont.eot?#iefix') format('embedded-opentype');
    src: url('./MuseoSans_500-webfont.woff') format('woff');
    src: url('./MuseoSans_500-webfont.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}


/* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ body */

body{
 
}


/* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ layouts */

.row{
  max-width: 50rem;
}

.wrapper{
  width: 960px;
  padding: 0px;
}

/* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ general styles */

h1, h2, h3, h5, h6{
  color: $dark_grey;
  font-weight : bold;
  font-family: $bebas;
  text-transform : uppercase;
  text-align: center;
}

p, h4, label{
  color: $dark_grey;
  font-family: $museo;
  font-size: 14px;
}

h1{
  font-size : 50px;
  margin-bottom: 30px;
}

h2{
  font-size : 36px;
}

a{
  font-family: $museo;
  text-decoration: none;
}

footer{
  background: $blue;
  padding: 50px 0;
  margin-top: 80px;

  p, a, a:hover{
    color: white;
    font-size: 14px;
  }
}

.btn, .btn:hover{
  background: $pink;
  background-color: $pink;
  font-family: $museo;
  text-transform: uppercase;
}

ul{
  list-style-type: none;
}

nav{
  section{
    padding: 0;
  }
}

footer{
  h4{
    margin-bottom: 10px;
  }
}

input[type="text"]{
  display: inline-block;
  font-family: $museo;
}

